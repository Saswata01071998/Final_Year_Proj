<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="20sp"
        android:elevation="70sp"
        app:cardCornerRadius="15sp"
        android:background="@color/white"
        app:cardElevation="80dp"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/course_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/img_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#fff"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/discover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/three"
                android:layout_weight=".7"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical"
                android:weightSum="1"
                >

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Sample Course"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_weight=".5"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/caption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="Lets learn some THREE lettered words!!"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/fun_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mascotttt"
                        android:layout_weight="0.5"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>